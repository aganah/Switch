<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/main_color"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rancho"
        android:textColor="#F8B195"
        android:textSize="72dp"
        android:text="Register"
        android:layout_marginBottom="10dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="400dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="15dp">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="243dp"
            android:layout_height="393dp"
            app:cardBackgroundColor="#F67280"
            app:cardCornerRadius="15dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/regis_uname_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acme"
                    android:text="Username"
                    android:textSize="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/regis_input_uname"
                    android:layout_marginRight="135dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#6C5B7B"
                    />
                <EditText
                    android:id="@+id/regis_input_uname"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_rectangle_white"
                    app:layout_constraintTop_toBottomOf="@id/regis_uname_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/regis_password_text"
                    android:layout_marginTop="5dp"
                    android:inputType="text"
                    />

                <TextView
                    android:id="@+id/regis_password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="140dp"
                    android:fontFamily="@font/acme"
                    android:text="Password"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/regis_input_uname"
                    android:textColor="#6C5B7B"/>
                <EditText
                    android:id="@+id/regis_input_password"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_rectangle_white"
                    app:layout_constraintTop_toBottomOf="@id/regis_password_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="5dp"
                    android:inputType="textPassword"
                    />

                <TextView
                    android:id="@+id/regis_email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="165dp"
                    android:fontFamily="@font/acme"
                    android:text="Email"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/regis_input_password"
                    android:textColor="#6C5B7B"/>
                <EditText
                    android:id="@+id/regis_input_email"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_rectangle_white"
                    app:layout_constraintTop_toBottomOf="@id/regis_email_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="5dp"
                    android:inputType="textEmailAddress"
                    />
                <TextView
                    android:id="@+id/regis_telp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="115dp"
                    android:fontFamily="@font/acme"
                    android:text="Nomor Telepon"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/regis_input_email"
                    android:textColor="#6C5B7B"/>
                <EditText
                    android:id="@+id/regis_input_telp"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_rectangle_white"
                    app:layout_constraintTop_toBottomOf="@id/regis_telp_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="5dp"
                    android:inputType="phone"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/regis_button"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/regis_input_telp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/rounded_rectangle_main"
                    android:text="Create"
                    android:fontFamily="@font/rancho"
                    android:textColor="#F8B195"
                    android:textSize="20dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>




</LinearLayout>