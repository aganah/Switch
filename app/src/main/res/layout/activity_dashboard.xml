<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:background="@color/main_color"
    >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/prof_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_profile_foreground"
        android:background="@drawable/rounded_rectangle_pink"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="PROFILE"
        android:textStyle="bold"
        android:textColor="#355C7D"
        android:paddingRight="15dp"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/text_halo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prof_icon"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Halo, "
            android:textSize="30dp"
            android:textColor="#F8B195"/>
        <TextView
            android:id="@+id/nama_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="______"
            android:textSize="25dp"
            android:textColor="#F8B195"/>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/topcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F67280"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_halo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp">
            <LinearLayout
                android:id="@+id/show_saldo"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SALDO"
                    android:textSize="20dp"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/saldo_kamu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp.000.000"
                    android:textSize="15dp"
                    android:textColor="#fff"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/isi_saldo"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:background="@drawable/rounded_rectangle_purple"
                android:text="+ Isi Saldo"
                android:textColor="#fff"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topcard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="#F8B195"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="15dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pulsa_add"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:background="@drawable/rounded_rectangle_purple"
                android:text="Pulsa"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:textSize="14dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ewallet_add"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:background="@drawable/rounded_rectangle_purple"
                android:text="Isi\nE-wallet"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:textSize="14dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/transfer_to"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:background="@drawable/rounded_rectangle_purple"
                android:text="Transfer"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:textSize="14dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottombar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:fabCradleMargin="10dp"
            android:backgroundTint="#F67280">
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:menu="@menu/bottom_navbar"
                android:background="@drawable/transparent_background"
                android:layout_marginEnd="16dp"/>
        </com.google.android.material.bottomappbar.BottomAppBar>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/bottombar"
            android:src="@drawable/ic_transfer"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.constraintlayout.widget.ConstraintLayout>