<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GlobalActivity"
    android:background="@color/main_color">

    <androidx.cardview.widget.CardView
        android:id="@+id/titletrf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="#F67280"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Transfer"
            android:textColor="#6C5B7B"
            android:textSize="30dp"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/subtitle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titletrf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nominal yang kamu kirim"
        android:textSize="20dp"
        android:paddingTop="25dp"
        android:textColor="#F8B195"
        android:paddingLeft="25dp"
        />
    <EditText
        android:id="@+id/inp_sentto"
        android:layout_width="230dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/rounded_rectangle_pink"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:hint="Rp.XXX.XXX"/>
    <TextView
        android:id="@+id/rek_penerima"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inp_sentto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomor Rekening Penerima"
        android:textSize="20dp"
        android:paddingTop="15dp"
        android:textColor="#F8B195"
        android:paddingLeft="25dp"/>
    <EditText
        android:id="@+id/inp_rek"
        android:layout_width="230dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/rek_penerima"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/rounded_rectangle_pink"
        android:hint="15252123"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/globalbtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:text="Kirim"
        android:textColor="#fff"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>
