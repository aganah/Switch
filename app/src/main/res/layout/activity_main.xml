<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/main_color">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rancho"
        android:textColor="#F8B195"
        android:textSize="72dp"
        android:text="Switch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="150dp"
        />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_btn"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="Login"
            android:fontFamily="@font/ranchers"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_rectangle_pink"
            android:layout_marginTop="50dp"
            android:textColor="#6C5B7B"
         />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/regis_btn"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:text="Register"
            android:fontFamily="@font/ranchers"
            app:layout_constraintTop_toBottomOf="@id/login_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_rectangle_purple"
            android:layout_marginTop="10dp"
            android:textColor="#FFA3AC"
         />

</androidx.constraintlayout.widget.ConstraintLayout>