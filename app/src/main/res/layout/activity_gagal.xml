<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GagalActivity"
    android:background="@color/main_color">

    <ImageView
        android:layout_marginTop="200dp"
        android:id="@+id/imagefail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_gagal"
        app:layout_constraintBottom_toTopOf="@id/transaksigagal"
        />
    <TextView
        android:id="@+id/transaksigagal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imagefail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Transaksi Gagal!"
        android:textColor="#F8B195"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@id/backbutton"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backbutton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transaksigagal"
        android:layout_marginTop="15dp"
        android:text="Kembali"
        android:textColor="#fff"
        android:background="@drawable/rounded_rectangle_pink"/>

</androidx.constraintlayout.widget.ConstraintLayout>